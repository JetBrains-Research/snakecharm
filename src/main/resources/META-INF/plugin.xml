<idea-plugin>
  <id>com.jetbrains.snakecharm</id>
  <name>SnakeCharm</name>
  <vendor email="roman.chernyatchik@jetbrains.com"
          url="https://research.jetbrains.org/groups/biolabs">
    JetBrains Research
  </vendor>

  <description><![CDATA[
    Adds Snakemake language support.<br>
    Snakemake is a language for workflow management, see
    <a href="https://snakemake.readthedocs.io/en/stable/">Snakemake Home Page</a>
    ]]></description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  
  <!-- PyCharm / Python plugin dependency -->
  <depends>com.intellij.modules.lang</depends>
  <depends optional="true">com.intellij.modules.python</depends>

  <!--<idea-version since-build="183.0" until-build="183.*"/>-->
  
  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.jetbrains.snakemake.SnakemakeFileTypeFactory"/>
    <lang.parserDefinition
        language="Snakemake"
        implementationClass="com.jetbrains.snakemake.lang.parser.SnakemakeParserDefinition"
    />
    <!--<colorSettingsPage implementation="com.jetbrains.snakemake.lang.highlighter.SnakemakeColorsPage"/>-->
    <lang.syntaxHighlighterFactory language="Snakemake" implementationClass="com.jetbrains.snakemake.lang.highlighter.SnakemakeSyntaxHighlighterFactory"/>
    <!--<annotator language="Snakemake" implementationClass="com.jetbrains.snakemake.lang.highlighter.SnakemakeDumbAwareAnnotator"/>-->
    <annotator language="Python" implementationClass="com.jetbrains.snakemake.lang.highlighter.SnakemakeDumbAwareAnnotator"/>
  </extensions>

  <extensions defaultExtensionNs="Pythonid">
    <dialectsTokenSetContributor implementation="com.jetbrains.snakemake.lang.SnakemakeTokenSetContributor"/>
  </extensions>
</idea-plugin>